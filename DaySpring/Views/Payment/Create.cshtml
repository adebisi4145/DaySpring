@using DaySpring.Enums
@model DaySpring.ViewModels.CreatePaymentRequestModel

@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    ViewData["Title"] = "Create";
    var error = ViewData["error"] as string;
}

<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">

            <h3 class="card-header bg-black text-center"><strong>Make Payment</strong></h3>
            
            <div class="card-body">
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger">@error</div>
                }
                <form method="POST">
                    <div>
                        <label asp-for="@Model.Amount" class="control-label"><strong>Amount</strong></label>
                        <input asp-for="@Model.Amount" type="text" class="form-control" />
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="@Model.PaymentType" class="control-label">Semester</label>
                        <select asp-for="@Model.PaymentType" class="form-control" required>
                            Select Semester
                            <option value="@PaymentType.Tithe"> Tithe</option>
                            <option value="@PaymentType.Offering"> Offering</option>
                            <option value="@PaymentType.Seed"> Seed</option>
                            <option value="@PaymentType.Others"> Others</option>
                        </select>
                    </div>
                    <br />
                    <button class="btn btn-primary" style="background-color: whitesmoke;"><a asp-action="Create">Next</a></button>

                </form>
            </div>
        </div>
    </div>
</div>

