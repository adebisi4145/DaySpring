@model DaySpring.ViewModels.PaymentsResponseModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "GetPaymentsByEmailMedia";
}

<div class="card-header" style="background-color: whitesmoke;">
    <div class="card-title">
        <h1 class="text-center">My Payments</h1>
    </div>
</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Details
            </th>
            <th>
                Amount
            </th>
            <th>
                Transaction Reference
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transation in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => transation.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transation.PaymentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transation.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transation.PaymentReference)
                </td>
            </tr>
        }
    </tbody>
</table>
}
