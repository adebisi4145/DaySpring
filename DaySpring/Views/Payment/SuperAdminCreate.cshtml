@using DaySpring.Enums
@model DaySpring.ViewModels.CreatePaymentRequestModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewData["Title"] = "SuperAdminCreate";
    var error = ViewData["error"] as string;
}

<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">

            <h3 class="card-header bg-black text-center"><strong>Make Payment</strong></h3>

            <div class="card-body">
                @if (!string.IsNullOrEmpty(error))
                {
                    <div class="alert alert-danger">@error</div>
                }
                <form method="POST">
                    <div>
                        <label asp-for="@Model.Amount" class="control-label"><strong>Amount</strong></label>
                        <input asp-for="@Model.Amount" type="text" class="form-control" required/>
                    </div>
                    <div>
                        <label asp-for="@Model.PaymentCategoryId" class="control-label"><strong>Payment Category</strong></label>
                        <select asp-for="@Model.PaymentCategoryId" asp-items="ViewBag.PaymentCategories" required >
                            <option value="">--Select Payment Category--</option>
                        </select>
                    </div>
                    <br />
                    <button class="btn btn-primary" style="background-color: whitesmoke;"><a asp-action="SuperAdminCreate">Next</a></button>

                </form>
            </div>
        </div>
    </div>
</div>

