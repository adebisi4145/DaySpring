@model DaySpring.ViewModels.CategoriesResponseModel

@{
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewData["Title"] = "SuperAdminIndex";
}

<div class="card-header" style="background-color: whitesmoke;">
    <div class="card-title">
        <h1 class="text-center">Category</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>


            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Data)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => course.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => category.Name)
                </td>

                <td>
                    <a asp-action="SuperAdminDetails" asp-route-id="@category.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>