@model DaySpring.ViewModels.CategoryResponseModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this Category?</h3>
<br />
<div>

    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Name)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Data.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="MediaIndex">Back</a>
    </form>
</div>
