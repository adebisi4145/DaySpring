@model DaySpring.ViewModels.MemberResponseModel

@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<br>
<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Update Info</strong></h3>
            <div class="card-body">
                <form method="POST">
                    <p>Check the details carefully before clicking on the Update button</p>
                    <div>
                        <label asp-for="Data.FirstName" class="control-label">First Name</label>
                        <input name="Name" value="@Model.Data.FirstName" type="text" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="Data.LastName" class="control-label">Last Name</label>
                        <input name="LastName" value="@Model.Data.LastName" type="text" class="form-control" />
                    </div>
                    <br />
                    <button type="submit">Update</button>

                </form>
            </div>
        </div>
    </div>
</div>


