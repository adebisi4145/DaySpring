@model DaySpring.ViewModels.UpdateMemberPasswordRequestModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "EditPasswordMedia";
}


<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Update Password</strong></h3>
            <div class="card-body">
                <form method="POST">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                    }
                    <p>Check the details carefully before clicking on the Update button</p>
                    <div>
                        <label asp-for="OldPassword" class="control-label">New Password</label>
                        <input asp-for="OldPassword" type="text" class="form-control" required/>
                    </div>
                    <div>
                        <label asp-for="NewPassword" class="control-label">Old Password</label>
                        <input asp-for="NewPassword" type="text" class="form-control" required/>
                    </div>
                    <br />
                    <button type="submit">Update</button>

                </form>
            </div>
        </div>
    </div>
</div>