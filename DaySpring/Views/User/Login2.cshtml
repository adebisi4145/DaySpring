@model DaySpring.ViewModels.LoginUserRequestModel

@{
    ViewData["Title"] = "Login";
}

<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Login</strong></h3>
            <div class="card-body">
                <form method="POST">
                    <div>
                        <label asp-for="Email" class="control-label"><strong>Email</strong></label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="Password" class="control-label"><strong>Password</strong></label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <br />
                    <button class="btn btn-primary" style="background-color: whitesmoke;"><a asp-action="Create">Login</a></button>

                </form>
            </div>
        </div>
    </div>
</div>