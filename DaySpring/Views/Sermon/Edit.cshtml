@model DaySpring.ViewModels.SermonResponseModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<br>
<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Update Sermon</strong></h3>
            <div class="card-body">
                <form method="POST">
                    <p>Check the details carefully before clicking on the Update button</p>
                    <div>
                        <label asp-for="Data.Title" class="control-label"><strong>Title</strong></label>
                        <input name="Title" value="@Model.Data.Title" type="text" class="form-control" required/>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Data.Preacher" class="control-label">Preachers</label>
                        <select asp-for="Data.Preacher" class="form-control" asp-items="ViewBag.Preachers" required>
                            <option value="">Select Preacher</option>
                        </select>
                    </div>
                    <br />
                    <button type="submit">Update</button>

                </form>
            </div>
        </div>
    </div>
</div>


