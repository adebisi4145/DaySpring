<body>
    <!-- ======= Intro Single ======= -->
    <section class="intro-single">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8">
                    <div class="title-single-box">
                        <h1 class="title-single">Books</h1>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- End Intro Single-->
    <!-- =======  Blog Grid ======= -->
    <section class="news-grid grid">
        <div class="container">
            <div class="row">
                @foreach (var book in Model.Data)
                {
                    <div class="col-md-4">
                        <div class="card-box-b card-shadow news-box">
                            <div class="img-box-b">
                                <div class="img-b img-fluid" style="background: url(../../BookImages/@book.BookImage); width:400px; height:350px; background-repeat: no-repeat; background-size:cover"></div>
                                @*<img src="~/bookImages/@book.BookImage" alt="" class="img-b img-fluid" width:"700px" height:"300px" style="max-width:700px; max-height:300px">*@
                            </div>
                            <div class="card-overlay">
                                <div class="card-header-b">
                                    <div class="card-category-b">
                                        <a asp-action="SuperAdminDetails" asp-route-id="@book.Id" class="category-b">@book.Title</a>

                                    </div>
                                    <div class="card-title-b">
                                        <h2 class="title-2">
                                            @foreach (var author in book.Authors)
                                            {
                                                <a asp-action="SuperAdminDetails" asp-controller="Author" asp-route-id="@author.Id">@author.FirstName @author.LastName</a>

                                            }
                                        </h2>
                                    </div>
                                    @*<div class="card-date">
                                    <span class="date-b">18 Sep. 2017</span>
                                </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <button class="btn" style="background-color: #2eca6a;"><a asp-action="SuperAdminIndex">Back</a></button>
