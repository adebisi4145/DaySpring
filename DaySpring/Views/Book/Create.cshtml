@model DaySpring.ViewModels.CreateBookRequestModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Add Book</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to add a book.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Add" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="ISBN" class="control-label"></label>
                            <input asp-for="ISBN" class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Publisher" class="control-label"></label>
                            <input asp-for="Publisher" class="form-control" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="NumberOfPages" class="control-label"></label>
                            <input asp-for="NumberOfPages" class="form-control" />
                            <span asp-validation-for="NumberOfPages" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="control-label"><strong>Select Image</strong></label>
                            <input name="image" type="file" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label"><strong>Select Pdf</strong></label>
                            <input name="pdf" type="file" class="form-control" />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label asp-for="Authors" class="control-label"></label>
                            <select asp-for="Authors" class="form-control" asp-items="ViewBag.Authors" required multiple>
                                <option value="">--Select Author--</option>
                            </select>
                        </div>
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label asp-for="Categories" class="control-label"></label>
                            <select asp-for="Categories" class="form-control" asp-items="ViewBag.Categories" required multiple>
                                <option value="">--Select Author--</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group ">
                        <input asp-action="Create" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>




