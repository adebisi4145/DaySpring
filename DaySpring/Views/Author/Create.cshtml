@model DaySpring.ViewModels.CreateAuthorRequestModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Add Author</strong></h3>
            <div class="card-body">
                <form method="POST" enctype="multipart/form-data">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <p class="alert alert-warning alert-dismissible" role="alert">@ViewBag.Message</p>
                    }
                    <div>
                        <label asp-for="FirstName" class="control-label"><strong>First Name</strong></label>
                        <input asp-for="FirstName" type="text" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="LastName" class="control-label"><strong>Last Name</strong></label>
                        <input asp-for="LastName" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label"><strong>Select Image</strong></label>
                        <input name="image" type="file" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="Biography" class="control-label"><strong>Biogaphy</strong></label>
                        <textarea asp-for="Biography" type="text" class="form-control"></textarea>
                        @*<input asp-for="Biography" type="text" class="form-control" />*@
                    </div>
                    <br />
                    <button class="btn btn-primary" style="background-color: whitesmoke;"><a asp-action="Create">Add Author</a></button>

                </form>
            </div>
        </div>
    </div>
</div>

