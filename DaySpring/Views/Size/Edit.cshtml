@model DaySpring.ViewModels.SizeResponseModel

@{
    Layout = "~/Views/Shared/_MediaLayout.cshtml";
    ViewData["Title"] = "Edit";
}

<br>
<div class="row row-content d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header bg-black text-center"><strong>Update Size</strong></h3>
            <div class="card-body">
                <form method="POST">
                    <p>Check the details carefully before clicking on the Update button</p>
                    <div>
                        <label asp-for="Data.Name" class="control-label"><strong>Name</strong></label>
                        <input name="Name" value="@Model.Data.Name" type="text" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="Data.Abbreviation" class="control-label"><strong>Abbreviation</strong></label>
                        <input name="Abbreviation" value="@Model.Data.Abbreviation" type="text" class="form-control" />
                    </div>
                    <br />
                    <button type="submit">Update</button>

                </form>
            </div>
        </div>
    </div>
</div>
